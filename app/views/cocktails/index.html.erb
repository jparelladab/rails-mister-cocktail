<div class='header'>CocktailsWord</div>

<div class="container">

<% @cocktails.each do |cocktail| %>
  <div class="card">
    <div class='card-img'>
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="card-description">
      <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
    </div>
    <div class="remove">
      <%= link_to 'remove cocktail', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>

</div>
<div class='text-below-cards'>
<h4><%= link_to 'Add a new cocktail!', new_cocktail_path %></h4>
</div>
